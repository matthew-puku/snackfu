<div class="jumbotron">
<h1>Fresh and Healthy Snacks for all.</h1>
<h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>  
      <div class="col-md-4">
        <div class= "thumbnail">
         
          <%= image_tag(listing.image.variant(resize: "100x100")) %>

          <%= listing.image %>


          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
             <%= link_to 'show', listing, class: "btn btn-link" %>
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>