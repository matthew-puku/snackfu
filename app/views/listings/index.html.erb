<div class="jumbotron">
  <h1>Snacks for all.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>  
      <div class="col-md-4">
        <div class= "thumbnail">
         
          <%= if listing.image.attached?
              link_to image_tag(listing.image.variant(resize: "100x100")),listing, class: "btn btn-link"
              else
                "No image available" 
              end %>

          <div class="caption">
            <h3><%= link_to listing.name, listing %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
                         
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>