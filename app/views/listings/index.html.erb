<div class="jumbotron">
  <h1>Snacks for all.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>  
      <div class="col-md-4">
        <div class= "thumbnail">
         
          <%= image_tag(listing.image.variant(resize: "100x100")) %>



          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
             <%= link_to 'show', listing, class: "btn btn-link" %>
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<div class="jumbotronfoot">
  <% if user_signed_in? %>
  <%= link_to image_tag('jumbo.png',width: '1000', height: '350', alt: 'New Listing'), new_listing_path, class: "btn btn-link",title: 'New Listing' %>     
  <% end %>
</div>
